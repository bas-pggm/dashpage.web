{
	"private": true,
	"name": "dashpage.web",
	"version": "0.1.0",
	"description": "dashpage app",

	"author": "Bastiaan Stroosnijder <bas@strootje.com>",
	"contributors": [
		{
			"name": "Bastiaan Stroosnijder",
			"email": "bas@strootje.com"
		}
	],

	"repository": {
		"type": "git",
		"url": "https://www.github.com/strootje/dashpage.web"
	},

	"scripts": {
		"clean": "rm -rf ./dist",
		"server": "node app",

		"lint": "run-p lint:scripts lint:views",
		"lint:scripts": "eslint ./app/public",
		"lint:styles": "echo TODO && exit 1",
		"lint:views": "pug-lint ./app/public",

		"prebuild": "run-p clean lint",
		"build": "webpack",
		"watch": "npm run build -- --watch",

		"prestart": "run-s build",
		"start": "run-s server",

		"docker": "docker build -t dutchviking/dashpage.web .",
		"compose": "docker-compose up -d"
	},

	"dependencies": {
		"express": "4.14.*",
		"page": "1.7.*",
		"serve-static": "1.11.*",
		"skeleton-less": "2.0.*",
		"vue": "2.1.*",
		"vue-resource": "1.0.*"
	},

	"devDependencies": {
		"babel-core": "6.17.*",
		"babel-loader": "6.2.*",
		"babel-preset-es2015": "6.16.*",
		"babel-polyfill": "6.16.*",
		"eslint": "3.8.*",
		"file-loader": "0.9.*",
		"html-webpack-plugin": "2.24.*",
		"less": "2.7.*",
		"less-loader": "2.2.*",
		"npm-run-all": "3.1.*",
		"pug": "2.0.0-beta6",
		"pug-lint": "2.3.*",
		"pug-loader": "2.3.*",
		"vue-loader": "10.0.*",
		"vue-template-loader": "0.1.*",
		"webpack": "1.13.*"
	}
}
